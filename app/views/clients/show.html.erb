<div class="row">
  <div class="col-md-8">
    <div class="page-header">
      <h2><%= @client.name %> <%= @client.gender %> </h2>
    </div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#new" aria-controls="new" role="tab" data-toggle="tab">New</a></li>
    <li role="presentation"><a href="#on-going" aria-controls="on-going" role="tab" data-toggle="tab">On Going</a></li>
    <li role="presentation"><a href="#completed" aria-controls="completed" role="tab" data-toggle="tab">Completed</a></li>
   
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="new">

  <br/><br/>
  <table class="table table-striped" id="newProjects">
    <thead>
        <tr>
          <th> # </th>
          <th> Name </th>
          <th> Actions </th>
        </tr>
    </thead>
    <tbody>
    <% count = 1 %>
      <% @client.projects.where('status = ?', "new").each do |project| %>
      <tr>
        <td><%= count  %></td>
        <td><%= project.name.capitalize %>


        <% if !project.tasks.empty? %>  
          <div class="progress">

            <div class="progress-bar progress-bar-success progress-bar-striped" style="width: <%= project.calc_completed %>%">
            </div>

            <div class="progress-bar progress-bar-warning progress-bar-striped" style="width: <%= project.calc_incomplete %>%">
            </div>

            <div class="progress-bar progress-bar-danger progress-bar-striped" style="width: <%= project.calc_over_due %>%">

            </div>
          </div>
          <% end %>

        </td>

        <td><%= link_to "show", project_path(project) %></td>
      </tr>
      <% count += 1 %>
    <% end %>
    </tbody>
  </table>


    </div>
